<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.datademo.MainActivity">

    <Button
        android:id="@+id/SQL_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="SQL" />

    <Button
        android:id="@+id/firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SQL_button"
        android:layout_alignStart="@+id/SQL_button"
        android:layout_below="@+id/SQL_button"
        android:text="FIREBASE" />

    <Button
        android:id="@+id/lastchoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firebase"
        android:layout_alignStart="@+id/firebase"
        android:layout_below="@+id/firebase"
        android:text="LASTCHOICE" />
</RelativeLayout>
